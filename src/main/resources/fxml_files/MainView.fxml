<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.fcmanagement.controllers.MainViewController">
    <!-- Top Header -->
    <top>
        <HBox style="-fx-background-color: #2E3A4F;" alignment="CENTER">
            <Label text="DASHBOARD" style="-fx-text-fill: white; -fx-font-size: 40px;" />
        </HBox>
    </top>
    
    <!-- Left Sidebar -->
    <left>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #3A4D6D;">
            <VBox spacing="5" style="-fx-background-color: #3A4D6D; -fx-padding: 30;">
                <TitledPane text="Dashboard" expanded="false">
                    <VBox spacing="5">
                        <Hyperlink text="Overview" onAction="#handleOverview"/>
                        <Hyperlink text="Analytics" onAction="#handleAnalytics"/>
                    </VBox>
                </TitledPane>
                
                <TitledPane text="Products" expanded="false">	
                    <VBox spacing="5">
                        <Hyperlink text="Add Product" onAction="#handleAddProduct"/>
                        <Hyperlink text="Product List" onAction="#handleViewProducts"/>
                    </VBox>
                </TitledPane>
                
                <TitledPane text="Purchase" expanded="false">
                    <VBox spacing="5">
                        <Hyperlink text="Purchase Bill" onAction="#handlePurchaseBill"/>
                        <Hyperlink text="Purchase List" onAction="#handlePurchaseList"/>
                    </VBox>
                </TitledPane>
                
                <TitledPane text="Sale" expanded="false">
                    <VBox spacing="5">
                        <Hyperlink text="New Sale" onAction="#handleNewSale"/>
                        <Hyperlink text="Sale History" onAction="#handleSaleHistory"/>
                    </VBox>
                </TitledPane>
                
                <TitledPane text="Report" expanded="false">
                    <VBox spacing="5">
                        <Hyperlink text="Sales Report" onAction="#handleSalesReport"/>
                        <Hyperlink text="Inventory Report" onAction="#handleInventoryReport"/>
                    </VBox>
                </TitledPane>
            </VBox>
        </ScrollPane>
    </left>
    
    <!-- Main Content Area -->
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <HBox spacing="10">
                <Label text="Welcome to the Dashboard!" style="-fx-font-size: 25px;" />
            </HBox>
            <ListView fx:id="listView" />
        </VBox>
    </center>
</BorderPane>