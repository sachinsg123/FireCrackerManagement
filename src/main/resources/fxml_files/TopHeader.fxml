<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fcmanagement.controllers.MainViewController">
	<!-- Top Header -->
	<top>
	    <HBox alignment="CENTER" prefHeight="71.0" prefWidth="931.0" spacing="10" style="-fx-background-color: #2E3A4F;">
	    
	    	<HBox alignment="CENTER_LEFT" spacing="10">
		        <ImageView fitHeight="32" fitWidth="32.0">
		            <image>
		                <Image url="@/Images/a2zimage.jpeg" />
		            </image>
		            <HBox.margin>
		            <Insets left="40" />
		        </HBox.margin>
		        </ImageView>
		        <Label prefHeight="35.0" prefWidth="208.0" text="A2Z IT HUB PVT LTD" textFill="WHITE">
	                 <font>
	                    <Font name="System Bold Italic" size="18.0" />
	                 </font>
                </Label>
		    </HBox>
		    
		    <Pane prefHeight="192.0" prefWidth="673.0" HBox.hgrow="ALWAYS" />
		    <Button onAction="#handleViewAdminProfile" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-cursor: hand;" text="View Admin Profile">
		        <HBox.margin>
		            <Insets bottom="5" left="5" right="5" top="5" />
		        </HBox.margin>
	            <font>
	               <Font name="System Bold" size="14.0" />
	            </font>
		    </Button>
		    
		    <Button onAction="#handleLogout" style="-fx-background-color: red; -fx-text-fill: white; -fx-cursor: hand;" text="Logout">
		        <HBox.margin>
		            <Insets bottom="5" left="5" right="15" top="5" />
		        </HBox.margin>
	            <font>
	               <Font name="System Bold" size="14.0" />
	            </font>
		    </Button>
		</HBox>
	</top>
</BorderPane>
