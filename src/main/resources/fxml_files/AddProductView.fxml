<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="885.0" prefWidth="1356.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.fcmanagement.controllers.MainViewController">
	
	<top>
     	<fx:include source="TopHeader.fxml"/>
  	</top>
  
  	<left>
      	<fx:include source="Sidebar.fxml"/>
  	</left>

	<!-- Main Content Area -->
	 <center>
        <VBox prefHeight="828.0" prefWidth="1342.0" spacing="10" style="-fx-padding: 20;">
            <HBox prefHeight="114.0" prefWidth="1301.0" spacing="10">
               
                <Label prefWidth="117.0" style="-fx-font-size: 16px; -fx-text-fill: #333333;" text="Product Name :" />
				<TextField prefHeight="34.0" prefWidth="290.0" promptText="Enter product name" style="-fx-pref-width: 300px; -fx-padding: 5; -fx-font-size: 14px; -fx-border-color: #B0B0B0; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;" />

				<Label style="-fx-font-size: 16px; -fx-text-fill: #333333;" text="Product Price :" />
				<TextField promptText="Enter product price" style="-fx-pref-width: 300px; -fx-padding: 5; -fx-font-size: 14px; -fx-border-color: #B0B0B0; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;" />

				<Label style="-fx-font-size: 16px; -fx-text-fill: #333333;" text="Product Quantity :" />
				<TextField promptText="Enter product quantity" style="-fx-pref-width: 300px; -fx-padding: 5; -fx-font-size: 14px; -fx-border-color: #B0B0B0; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;" />
					
					</HBox>
					<HBox prefHeight="102.0" prefWidth="1331.0" spacing="10" styleClass="form-field">
				<Label prefHeight="12.0" prefWidth="109.0" style="-fx-font-size: 16px; -fx-text-fill: #333333;" text="Product Unit :" />
				<TextField prefHeight="33.0" prefWidth="310.0" promptText="Enter product unit" style="-fx-pref-width: 300px; -fx-padding: 5; -fx-font-size: 14px; -fx-border-color: #B0B0B0; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;" />

				<Label style="-fx-font-size: 16px; -fx-text-fill: #333333;" text="Product Size :" />
				<TextField prefHeight="33.0" prefWidth="318.0" promptText="Enter product size" style="-fx-pref-width: 300px; -fx-padding: 5; -fx-font-size: 14px; -fx-border-color: #B0B0B0; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;" />
                
            </HBox>
           <!-- Save Button -->
            <HBox alignment="CENTER" prefHeight="204.0" prefWidth="1354.0" spacing="10">
                <Button onAction="#handleSaveProduct" prefHeight="46.0" prefWidth="293.0" style="-fx-font-size: 16px; -fx-padding: 10px 20px; -fx-background-color: #2E3A4F; -fx-text-fill: white;" text="Save" />
            </HBox>
        </VBox>
    </center>
	
</BorderPane>
