<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fcmanagement.controllers.MainViewController">
  <!-- Top Header -->
	<top>
	    <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #2E3A4F;">
		    <Pane HBox.hgrow="ALWAYS" />
		    <Label style="-fx-text-fill: white; -fx-font-size: 40px;" text="View Admin Profile">
		    	<HBox.margin>
		            <Insets bottom="0" left="275" right="0" top="0" />
		        </HBox.margin>
		    </Label>
		    
		    <Pane HBox.hgrow="ALWAYS" />
		    <Button onAction="#handleViewAdminProfile" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 15px; -fx-cursor: hand;" text="View Admin Profile">
		        <HBox.margin>
		            <Insets bottom="5" left="5" right="5" top="5" />
		        </HBox.margin>
		    </Button>
		    
		    <Button onAction="#handleLogout" style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand;" text="Logout">
		        <HBox.margin>
		            <Insets bottom="5" left="5" right="15" top="5" />
		        </HBox.margin>
		    </Button>
		</HBox>
	</top>
   <!-- Left Sidebar -->
    <left>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #3A4D6D;">
            <VBox spacing="5" style="-fx-background-color: #3A4D6D; -fx-padding: 30;">
                <TitledPane expanded="false" text="Dashboard">
                    <VBox spacing="5">
                        <Hyperlink onAction="#handleOverview" text="Overview" />
                        <Hyperlink onAction="#handleAnalytics" text="Analytics" />
                    </VBox>
                </TitledPane>
                
                <TitledPane expanded="false" text="Products">	
                    <VBox spacing="5">
                        <Hyperlink onAction="#handleAddProduct" text="Add Product" />
                        <Hyperlink onAction="#handleViewProducts" text="Product List" />
                    </VBox>
                </TitledPane>
                
                <TitledPane expanded="false" text="Purchase">
                    <VBox spacing="5">
                        <Hyperlink onAction="#handlePurchaseBill" text="Purchase Bill" />
                        <Hyperlink onAction="#handlePurchaseList" text="Purchase List" />
                    </VBox>
                </TitledPane>
                
                <TitledPane expanded="false" text="Sale">
                    <VBox spacing="5">
                        <Hyperlink onAction="#handleNewSale" text="New Sale" />
                        <Hyperlink onAction="#handleSaleHistory" text="Sale History" />
                    </VBox>
                </TitledPane>
                
                <TitledPane expanded="false" text="Report">
                    <VBox spacing="5">
                        <Hyperlink onAction="#handleSalesReport" text="Sales Report" />
                        <Hyperlink onAction="#handleInventoryReport" text="Inventory Report" />
                    </VBox>
                </TitledPane>
            </VBox>
        </ScrollPane>
    </left>
    
   <center>
   		<VBox spacing="25" style="-fx-padding: 40;">
	        
	        <GridPane hgap="50" vgap="5">
	        	<ImageView fitHeight="200" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="5" GridPane.rowIndex="2">
	        		<image>
                        <Image url="@/Images/MaheshPhoto.jpeg" />
                    </image>
	        	</ImageView>
	        	
            	<Label layoutX="10.0" layoutY="158.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Company Name:" GridPane.rowIndex="2" />
            	
	            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Username:" GridPane.rowIndex="4" />
	            <TextField prefHeight="35.0" prefWidth="251.0" GridPane.rowIndex="5" />
	            
	            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Email:" GridPane.columnIndex="4" GridPane.rowIndex="4" />
	            <TextField prefHeight="35.0" prefWidth="251.0" GridPane.columnIndex="4" GridPane.rowIndex="5" />
	            
	            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Mobile:" GridPane.columnIndex="2" GridPane.rowIndex="4" />
	            <TextField prefHeight="35.0" prefWidth="251.0" GridPane.columnIndex="2" GridPane.rowIndex="5" />
   	            
      	            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Password:" GridPane.rowIndex="7" />
   	            <PasswordField prefHeight="35.0" prefWidth="251.0" GridPane.rowIndex="8" />
            
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
               <ColumnConstraints />
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints minHeight="10.0" prefHeight="30.0" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" />
            </rowConstraints>
	        </GridPane>
	    </VBox>
    </center>
</BorderPane>
